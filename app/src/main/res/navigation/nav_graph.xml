<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment"> <fragment
    android:id="@+id/startFragment"
    android:name="com.example.moviedatabaseapi.StartFragment"
    android:label="Start"
    tools:layout="@layout/fragment_start" >

    <action
        android:id="@+id/action_startFragment_to_movieListFragment"
        app:destination="@id/movieListFragment" />
</fragment>

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.example.moviedatabaseapi.MovieListFragment"
        android:label="Filmlista"
        tools:layout="@layout/fragment_movie_list" >

        <argument
            android:name="search_query"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_movieListFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
        <action
            android:id="@+id/action_movieListFragment_to_movieDateListFragment"
            app:destination="@id/movieDateListFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.example.moviedatabaseapi.MovieDetailFragment"
        android:label="fragment_movie_detail"
        tools:layout="@layout/fragment_movie_detail" >
        <argument
            android:name="movie_id"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/movieDateListFragment"
        android:name="com.example.moviedatabaseapi.MovieDateListFragment"
        android:label="fragment_movie_date_list"
        tools:layout="@layout/fragment_movie_date_list" >
        <action
            android:id="@+id/action_movieDateListFragment_to_movieDetailFragment3"
            app:destination="@id/movieDetailFragment" />
        <argument
            android:name="release_date"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="null"/>
